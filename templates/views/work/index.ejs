<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../../shared/head %>
</head>
<body>

  <header>
    <% include ../../shared/header %>
  </header>

    <div class="work">
        <div class="work-carousel">
            <% work.videos.forEach(function(video) { %>
                <div>
                    <div class="work-carousel-video">
                        <video src="<%= video.video.url %>" controls></video>
                    </div>
                </div>
            <% }) %>

            <% work.images.forEach(function(image) { %>
                <div>
                    <a href="<%= image.secure_url %>" target="_blank">
                        <div class="work-carousel-image" style="background-image: url('<%= image.secure_url %>');"></div>
                    </a>
                </div>
            <% }) %>
        </div>

        <div class="work-carousel-nav">
            <% work.videos.forEach(function(video) { %>
                <div class="work-carousel-nav-thumb" style="background-image: url('<%= video.thumbnail.secure_url %>');"></div>
            <% }) %>
            <% work.images.forEach(function(image) { %>
                <div class="work-carousel-nav-thumb" style="background-image: url('<%= image.secure_url %>');"></div>
            <% }) %>
        </div>

        <h2 class="work-title"><%= work.title %></h2>

        <div class="work-description">
          <span><%= moment(work.date).format('DD MMMM YYYY'); %></span>
          <p><%= work.description %></p>
        </div>
    </div>

</body>
</html>

